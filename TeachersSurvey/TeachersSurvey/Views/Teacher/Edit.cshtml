@model TeachersSurvey.Models.TblTeacher
@{
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-body">
    <div class="card-title">Kişi Düzenleme Sayfası</div>
    <hr>
    <form action="~/Teacher/Edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group row">
            <label for="input-4" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="FullName" id="input-4" value="@Model.FullName" placeholder="Name" maxlength="50" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="input-5" class="col-sm-2 col-form-label">Code</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Code" id="input-5" value="@Model.Code" placeholder="Code" maxlength="10" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="input-6" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="Password" id="input-6" value="@Model.Password" placeholder="Şifre" maxlength="20" required>
            </div>
        </div>
        <label for="input-6" class="col-sm-2 col-form-label">Admin mi?</label>
        <div class="icheck-material-primary icheck-inline ">
            @if (Model.IsAdmin == true)
            {
                <input type="radio" id="1" name="Answers" value="@TeachersSurvey.Constants.AnswerType.Yes" checked>
                <label for="1">@TeachersSurvey.Constants.AnswerType.Yes</label>

                <input type="radio" id="2" name="Answers" value="@TeachersSurvey.Constants.AnswerType.No">
                <label for="2">@TeachersSurvey.Constants.AnswerType.No</label>
            }
            else
            {
                <input type="radio" id="1" name="Answers" value="@TeachersSurvey.Constants.AnswerType.Yes">
                <label for="1">@TeachersSurvey.Constants.AnswerType.Yes</label>

                <input type="radio" id="2" name="Answers" value="@TeachersSurvey.Constants.AnswerType.No" checked>
                <label for="2">@TeachersSurvey.Constants.AnswerType.No</label>
            }


        </div>


        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10"></div>
        </div>
        <div class="form-group row">
            <label for="input-1" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary shadow-primary px-5"><i class="icon-lock"></i> Kaydet</button>
            </div>
        </div>
    </form>
</div>
