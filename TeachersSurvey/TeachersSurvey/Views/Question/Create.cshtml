
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-body">
    <div class="card-title">Soru Ekleme Sayfası</div>
    <hr>
    <form action="/Question/Create">
        <div class="form-group row">
            <label for="input-4" class="col-sm-2 col-form-label">Soru Girilmelidir </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Question" id="input-4" placeholder="Soru alanı" maxlength="300" required>
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10"></div>
        </div>
        <div class="form-group row">
            <label for="input-1" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary shadow-primary px-5"><i class="icon-lock"></i> Kaydet</button>
            </div>
        </div>
    </form>
</div>

